<h1>Listing langs</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Obs</th>
      <th>Requisitos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @langs.each do |lang| %>
      <tr>
        <td><%= lang.nome %></td>
        <td><%= lang.obs %></td>
        <td><%= lang.requisitos %></td>
        <td><%= link_to 'Show', lang %></td>
        <td><%= link_to 'Edit', edit_lang_path(lang) %></td>
        <td><%= link_to 'Destroy', lang, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lang', new_lang_path %>
